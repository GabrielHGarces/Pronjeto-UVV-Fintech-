<Window x:Class="Projeto_UVV_Fintech.Views.ContaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastrar Cliente" Height="218" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20,20,20,20">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Width="310">
            <StackPanel Width="156">
                <TextBlock Text="Cliente ID:"/>
                <TextBox x:Name="ClienteID" Margin="0,5,0,10"
                    PreviewTextInput="SomenteNumeros" Width="122" HorizontalAlignment="Left" TextChanged="ClienteID_TextChanged"/>
            </StackPanel>
            <StackPanel Width="152">
                <TextBlock Text="Tipo de conta"/>
                <ComboBox x:Name="TipoOpcoes" HorizontalAlignment="Left" Margin="0,3,0,10" Width="135" SelectionChanged="Type_SelectionChanged">
                    <ComboBoxItem Content="CP"/>
                    <ComboBoxItem Content="CC"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>



        <TextBlock Text="Nome Cliente:"/>
        <TextBox x:Name="NomeCliente" Margin="0,5,0,10"
             PreviewTextInput="SomenteLetras" IsEnabled="False"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Pesquisar ID" Width="80" Margin="5" Click="Pesquisar_Click"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="Cancelar_Click"/>
            <Button Content="Criar" Width="80" Margin="5" Click="Criar_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
