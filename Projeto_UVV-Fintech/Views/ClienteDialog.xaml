<Window x:Class="Projeto_UVV_Fintech.Views.ClienteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastrar Cliente" Height="301" Width="552"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
            <Label Content="Dados" Margin="0,0,0,0" VerticalAlignment="Top" Height="46" Width="160" FontSize="20"/>
            <Grid Width="166">
                <Label Content="ID do Cliente" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                <TextBox VerticalContentAlignment="Center" x:Name="IdInput1" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
            </Grid>
            <Grid Width="166">
                <Label Content="Telefone" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                <TextBox VerticalContentAlignment="Center" x:Name="TelefoneInput1" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
            </Grid>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <Grid Width="166">
                <Label Content="ID do Cliente" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                <TextBox VerticalContentAlignment="Center" x:Name="IdInput" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
            </Grid>
            <Grid Width="166">
                <Label Content="Telefone" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                <TextBox VerticalContentAlignment="Center" x:Name="TelefoneInput" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
            </Grid>
            <Grid Width="166">
                <Label Content="CEP" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                <TextBox VerticalContentAlignment="Center" x:Name="CEPInput" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
            </Grid>

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30" Height="52">
            <Button Content="Sacar" Width="80" Margin="5"/>
            <Button Content="Depositar" Width="80" Margin="5"/>
            <Button Content="Transferir" Width="80" Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="80" Margin="5"/>
            <Button Content="Salvar" Width="80" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
