<Window x:Class="Projeto_UVV_Fintech.Views.ClienteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastrar Cliente" Height="256" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20">
        <TextBlock Text="Nome:"/>
        <TextBox x:Name="NomeInput" Margin="0,5,0,10"
                 PreviewTextInput="SomenteLetras"/>

        <TextBlock Text="Telefone:"/>
        <TextBox x:Name="TelefoneInput" Margin="0,5,0,10"
                 PreviewTextInput="SomenteNumeros"/>

        <TextBlock Text="CEP:"/>
        <TextBox x:Name="CepInput" Margin="0,5,0,10"
                 PreviewTextInput="SomenteNumeros"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="80" Margin="5" Click="Cancelar_Click"/>
            <Button Content="Salvar" Width="80" Margin="5" Click="Salvar_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
