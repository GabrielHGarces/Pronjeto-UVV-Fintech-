<Window x:Class="Projeto_UVV_Fintech.Views.SaqueDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sacar" Height="200" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <StackPanel Margin="20">
        <Label Content="Valor do Saque:"/>
        <TextBox x:Name="ValorSaqueTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirmar" Width="80" Margin="5" Click="ConfirmarButton_Click" />
            <Button Content="Cancelar" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>