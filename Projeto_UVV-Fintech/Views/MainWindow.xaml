<Window x:Class="Projeto_UVV_Fintech.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_UVV_Fintech"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Gerenciador de Transações" Height="64" Margin="15" Width="202" Click="Button_Click" Cursor="Hand"/>
            <Button Content="Gerenciador de Contas" Height="64" Margin="15" Width="202" Click="Button_Click_1" Cursor="Hand"/>
            <Button Content="Gerenciador de Clientes" Height="64" Margin="15" Width="202" Click="Button_Click_2" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
