<Window x:Class="Projeto_UVV_Fintech.Views.TransferenciaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transferir" Height="250" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <StackPanel Margin="20">
        <Label Content="Conta de Destino (Número):"/>
        <TextBox x:Name="ContaDestinoTextBox" Margin="0,0,0,10" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
        <Label Content="Valor da Transferência:"/>
        <TextBox x:Name="ValorTransferenciaTextBox" Margin="0,0,0,10" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirmar" Width="80" Margin="5" Click="ConfirmarButton_Click" />
            <Button Content="Cancelar" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>