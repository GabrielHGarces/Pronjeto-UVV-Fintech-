<Window x:Class="Projeto_UVV_Fintech.Views.ViewTransacoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_UVV_Fintech.Views"
        mc:Ignorable="d"
        Title="ViewTransacoes" Height="635" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox" >
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker" >
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,-6">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Margin="0,10,0,0">
            <Button Content="Gerenciador de Transações" Height="43" Margin="15" Width="345" Cursor="Hand" Click="Button_Click"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Label Content="ID Transação" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox VerticalContentAlignment="Center" x:Name="IdInput" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" TextChanged="IdInput_TextChanged"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Tipo" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <ComboBox x:Name="TipoOpcoes" HorizontalAlignment="Center" VerticalAlignment="Center" Width="154" SelectionChanged="Type_SelectionChanged">
                        <ComboBoxItem Content="Todos" IsSelected="True"/>
                        <ComboBoxItem Content="Depósito"/>
                        <ComboBoxItem Content="Saque"/>
                        <ComboBoxItem Content="Transferência"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Label Content="Conta Remetente" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox x:Name="RemetenteInput" VerticalContentAlignment="Center" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" TextChanged="RemetenteInput_TextChanged"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Conta Destinatário" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox x:Name="DestinatarioInput" VerticalContentAlignment="Center" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" TextChanged="DestinatarioInput_TextChanged"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Button x:Name="ValorMaiorQue" Content="Menor Que" Margin="5,5,5,5" Height="21" Cursor="Hand" Click="ValorMaiorQue_Click"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Valor" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox VerticalContentAlignment="Center" Text="" Height="21" Margin="5,5,5,5" x:Name="NumericTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" LostFocus="NumericTextBox_LostFocus" GotFocus="NumericTextBox_GotFocus"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Button x:Name="DataMaiorQue" Content="Maior Que" Margin="5,5,5,5" Height="21" Cursor="Hand" Click="DataMaiorQue_Click"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Data" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <DatePicker x:Name="DataInput" SelectedDate="{Binding DataSelecionada, Mode=TwoWay}" Margin="5" SelectedDateChanged="DataInput_SelectedDateChanged" />
                </Grid>
            </StackPanel>


        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="330" Width="756" Margin="0,259,0,0">
            <Button x:Name="SearchButton" Content="Pesquisar" Height="43"  Cursor="Hand" Background="White" Click="SearchButton_Click" Width="187" HorizontalAlignment="Right"/>
            <DataGrid x:Name="TabelaTransacoes"
              AutoGenerateColumns="False"
              HeadersVisibility="All"
              CanUserAddRows="False"
              
              IsReadOnly="True" Height="287">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="0.5*" />
                    <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat={}{0:C}, ConverterCulture=pt-BR}" Width="1.5*" />
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="1.5*" />
                    <DataGridTextColumn Header="Data e Hora" Binding="{Binding DataEHora, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="2*" />
                    <DataGridTemplateColumn Header="Conta Remetente" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding ContaRemetente}"
                                    Padding="0"
                                    Foreground="Black"
                                    HorizontalAlignment="Stretch"
                                    Cursor="Hand"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Conta Destinatário" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding ContaDestinatario}"
                                    Padding="0"
                                    Foreground="Black"
                                    HorizontalAlignment="Stretch"
                                    Cursor="Hand"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>




    </Grid>
</Window>
